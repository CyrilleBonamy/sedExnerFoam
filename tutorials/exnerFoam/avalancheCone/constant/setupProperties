FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setupProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// dune parameters
bedform
{
    type              cone;
    conePos           3;    // cone center position
    coneWidth         1;  // width of cone
    angle             55;  // initial slope angle (in °)
}

bedload           off;


avalanche         on;
avalancheModel    Vinent;
DaMax             0.1;  // max avalanche diffusivity
reposeAngle       32;  // angle of repose (in °)

