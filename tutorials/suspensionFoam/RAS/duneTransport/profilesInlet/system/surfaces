surfaces
{
    type            surfaces;
    libs            (sampling);
    writeControl    writeTime;

    surfaceFormat   raw;
    fields          (p U k omega);

    // interpolationScheme cellPoint;  //<- default

    surfaces
    {
        zNormal
        {
            type        cuttingPlane;
            point       (0.0005 0 0);
            normal      (1 0 0);
            interpolate true;
        }
    }
}


