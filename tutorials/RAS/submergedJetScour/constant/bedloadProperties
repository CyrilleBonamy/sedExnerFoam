FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      bedloadProperties;
}

// ************************** sediment properties ************************** //

sedimentBed            on;  // on or off

bedMotion              on;

sedimentBedPatches     (sedimentBed);

bedload                on;

bedloadModel
{
    // type of formula for bedload, defaut is Meyer-Peter
    // qb* = alpha * shields^aExp * (shields - critShields)^bExp
    bedloadFormula     Meyer-Peter; // Meyer-Peter, Nielsen, custom
    
    //alpha              7.2;

    //aExp               0.5;

    //bExp               1;

    //criticalShields    0.05;  // default value 0.047

}

avalanche              on;

reposeAngle            32;  // repose angle in degrees, default is 32

// coef for avalanche additional bedload, default is 0.01
Qav                    0.005;


