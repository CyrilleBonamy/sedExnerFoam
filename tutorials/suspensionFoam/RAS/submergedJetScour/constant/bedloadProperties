FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      bedloadProperties;
}

// ************************** sediment properties ************************** //

sedimentBed            on;  // on or off

meshMotion             on;  // default is on

sedimentBedPatches     (sedimentBed);

bedloadModel
{
    // type of formula for bedload, defaut is Meyer-Peter
    // qb* = alpha * shields^aExp * (shields - critShields)^bExp
    bedloadFormula     custom; // Meyer-Peter, Nielsen, custom
    
    alpha              7.2;

    aExp               0.5;

    bExp               1;

    criticalShields    0.06;  // default value 0.047

}

avalanche              on;

// ************************************************************************* //
