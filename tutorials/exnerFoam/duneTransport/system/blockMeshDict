FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1;

height  0.1;
width   1;
len     20;

nx 120;
ny 1;
nz 1;

vertices
(
    // bottom
    (0 0 0) //0
    ($len 0 0) //1
    ($len $width 0) //2
    (0 $width 0) //3
    // top
    (0 0 $height) //4
    ($len 0 $height) //5
    ($len $width $height) //6
    (0 $width $height) //7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nx $ny $nz) grading (1 1 1)
);

boundary
(
    inlet
    {
        type cyclic;
        neighbourPatch outlet;
        faces
        (
            (0 4 7 3)
        );
    }

    sides
    {
        type empty;
        faces
        (
            (0 1 5 4)
            (3 7 6 2)
        );
    }

    outlet
    {
        type cyclic;
        neighbourPatch inlet;
        faces
        (
            (2 6 5 1)
        );
    }

    bottom
    {
        type patch;
        faces
        (
            (0 3 2 1)
         );
    }

    top
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }
);


