FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 1;

H     0.021;  // water depth
dx    0.001;  // domain width in x-direction, cyclic
dz    0.001;  // domain width in y-direction, empty


ny    64;
gy    16;

vertices        
(

    ( 0.01 0    0.01)
    ( 0.01 $H    0.01) 
    (-0.01 $H    0.01)
    (-0.01 0    0.01)

    ( 0.01 0   -0.01)
    ( 0.01 $H   -0.01)
    (-0.01 $H   -0.01)
    (-0.01 0   -0.01)

);

blocks          
(
    hex (3 0 4 7 2 1 5 6) (1 1 $ny) simpleGrading (1 1 $gy)
);

edges           
(
);

boundary         
(
    inlet
    {
        type   cyclic;
        neighbourPatch outlet;
        faces ((3 2 6 7));
    }
    outlet
    {
     type   cyclic;
     neighbourPatch  inlet;
     faces  ((0 1 5 4));
    }
    top
    {
        type    wall;
        faces ((2 1 5 6));
    }
    walls
    {
     type wall;
     faces ((3 0 4 7));
    }
    frontAndBackPlanes
    {
    type empty;
    faces (
           (4 7 6 5)
           (0 3 2 1)
          );
    }
);

mergePatchPairs
(
);

