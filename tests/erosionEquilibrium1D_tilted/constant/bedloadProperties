FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      bedloadProperties;
}

// ************************** sediment properties ************************** //

sedimentBed            on;

bedMotion              on;

sedimentBedPatches     (bed);

bedloadModel
{
    type               vanRijn;

    avalanche          off;
}

criticalShieldsModel
{
    type               Soulsby;
    slopeCorrection    on;
}


