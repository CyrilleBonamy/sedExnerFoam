FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1e-3;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           #include "kinlet";
        //value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    top
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    bed
    {
        type 	        kqRWallFunction;
        value           $internalField;
    }
    sides
    {
        type            empty;
    }
}


