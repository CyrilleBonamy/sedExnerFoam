FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      bedloadProperties;
}

// ************************** sediment properties ************************** //

sedimentBed            on;  // on or off

bedMotion              off;

sedimentBedPatches     (bed);

bedloadModel
{
    type               MeyerPeter;
}

avalanche              on;

reposeAngle            32;  // repose angle in degrees, default is 32

// coef for avalanche additional bedload, default is 0.01
Qav                    0.005;


