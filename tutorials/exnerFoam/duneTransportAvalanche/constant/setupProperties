FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setupProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

movingMesh           no;

// dune parameters
bedform
{
    type             gaussian;
    duneHeight       0.1;
    dunePos          2;
    duneWidth        0.6;
}

bedload          on;
Hwater           1;
Qwater           (1 1 1);
alpha            0.05;
beta             1.5;


avalanche        on;
avalancheModel   Vinent;
DaMax             0.1;  // max avalanche diffusivity
reposeAngle       32;  // angle of repose (in Â°)


